@namespace Synaplic.UniRH.Client.Shared.Dialogs
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            @_l["Confirmation"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_l["Cancel"]</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">@_l["Confirm"]</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string ContentText { get; set; }

    void Submit()
    {
        MudDialog.Close(true);
    }
    void Cancel() => MudDialog.Cancel();
}